<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="android.arbol.com.todoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_arbol_adopta"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <activity android:name=".auth.ChooserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.FacebookAuthActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/label_facebook_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".auth.GoogleSignInActivity"
            android:label="@string/label_google_sign_in" />
        <activity
            android:name=".auth.TwitterLoginActivity"
            android:label="@string/label_twitter_login" />
        <activity
            android:name=".main.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".main.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.arbol.com.todoapp.main.ItemListActivity" />
        </activity>
        <activity
            android:name=".main.Main3Activity"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.arbol.android.Main4Activity"></activity>
    </application>

</manifest>